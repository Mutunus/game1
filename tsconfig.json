  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    // remove this once ng-dragula fixes incompatibility issue with angular6
    "paths": {
      "dragula": ["../node_modules/dragula/dist/dragula.min.js"]
    }
  }
}
